<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuoteViewActivityFragment"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="com.w4ys.demostaticfragmentquoteview.TitleFragment"
        android:id="@+id/titleFragment"
        android:layout_weight="1"
        tools:layout="@layout/fragment_titles" />

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="com.w4ys.demostaticfragmentquoteview.QuoteFragment"
        android:id="@+id/quoteFragment"
        android:layout_weight="2"
        tools:layout="@layout/fragment_quotes" />

</LinearLayout>